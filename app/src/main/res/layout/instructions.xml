<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:background="@drawable/home_gradient"
    android:id="@+id/fullScreenLayout">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"

        android:id="@+id/grid"
        android:useDefaultMargins="false"
        android:touchscreenBlocksFocus="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chronometer">
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:text="00:00"
        android:visibility="gone" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:columnCount="1"
        android:id="@+id/circlesgrid"
        android:rowCount="10"
        android:layout_below="@+id/chronometer"></GridLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/clouds_on_top"
        android:clickable="false"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
        android:text="Welcome"
        android:fontFamily="font"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/imageView"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/sample_game" />


</RelativeLayout>